<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/results_details_text_view"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:gravity="left"
    android:layout_marginLeft="8dp"
    android:paddingLeft="30dp"
    android:text=""
    android:textSize="32sp"
    android:orientation="vertical"
    tools:context=".ResultsActivity"
    android:layout_marginBottom="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/carrier_relativeLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="GDN 9:15 28-06"
            android:id="@+id/departure_detail_textView"
            android:layout_marginRight="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="40h"
            android:id="@+id/travel_time_detail_textView"
            android:layout_toRightOf="@+id/departure_detail_textView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="OSL 1:15 30-06"
            android:id="@+id/arrival_detail_textView"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/travel_time_detail_textView"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Scandinavian Airlines System (SAS)"

            android:id="@+id/carrier_detail_textView"
            android:layout_marginRight="16dp"
            />

    </LinearLayout>

</LinearLayout>